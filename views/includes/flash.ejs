<%if(success.length&&success){%>
    <div class="alert alert-success col-6 offset-3" role = "alert" style="height: 3rem !important; display:flex !important; justify-content: space-between !important;">
        <h4><%=success%></h4>
        <button type = "button" class = "btn-close" data-bs-dismiss="alert" aria-label="close" style = "border: none;">
            <i class="fa-solid fa-circle-xmark"></i>
        </button>
    </div>
<%}%>

<%if(error.length && error){%>
    <div class="alert alert-danger col-6 offset-3 alert-dismissible fade show" role = "alert" style="height: 3rem !important; display:flex !important; justify-content: space-between !important;">
        <h4><%=error%></h4>
        <button type = "button" class = "btn-close" data-bs-dismiss="alert" aria-label="close" style = "border: none;">
            <i class="fa-solid fa-circle-xmark"></i>
        </button>
    </div>
<%}%>